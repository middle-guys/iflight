<tr class="force-full-width">
  <td valign="top" class="force-full-width">
    <center>
      <table cellspacing="0" cellpadding="0" width="500" class="w320">
        <tr>
          <td>
            <table cellspacing="0" cellpadding="0" width="100%">
              <tr>
                <td class="mobile-padding" style="text-align:left;">
                  <br>
                  Alert BOT found price go down as your expectation
                  <br>
                  <br>
                  <br>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td valign="top" style="border-bottom:1px solid #a1a1a1;">
            <table cellspacing="0" cellpadding="0" class="force-full-width">
              <tr>
                <td style="padding-bottom: 30px;" class="mobile-padding">
                  <table class="force-full-width" cellspacing="0" cellpadding="0">
                    <tr>
                      <td class="mobile-block">
                        <table cellspacing="0" cellpadding="0" class="force-full-width">
                          <tr>
                            <td class="mobile-border" style="background-color: #f95497; color: #ffffff; padding: 5px; border-right: 3px solid #ffffff; text-align:left;">
                              From <%= Airport.find(@alert.ori_air_id).name %> (<%= Airport.find(@alert.ori_air_id).code%>) to <%= Airport.find(@alert.des_air_id).name %> (<%= Airport.find(@alert.des_air_id).code %>) on <%= format_date(@alert.time_start) %>
                            </td>
                          </tr>
                          <% @tickets.each do |ticket| %>
                          <tr>
                            <td  style="background-color: #ebebeb; padding: 8px; border-top: 3px solid #ffffff; text-align:left;">
                              <table class="force-full-width" cellspacing="0" cellpadding="0">
                                <tr>
                                  <td class="mobile-block" width="33%">
                                      <%= image_tag("airlines/#{plane_category_logo_name(PlaneCategory.find(ticket[:plane_category_id]))}", width: '60', height: '30' )%>
                                  </td>
                                  <td class="mobile-block" width="33%">
                                    <%= PlaneCategory.find(ticket[:plane_category_id]).name %> (<%= ticket[:code_flight] %>) <br>
                                    <%= ticket[:time_depart] %> - <%= ticket[:time_arrive] %>
                                  </td>
                                  <td class="mobile-block" width="33%">
                                    <%= format_currency(ticket[:price_adult]) %>
                                  </td>
                                </tr>
                              </table>
                            </td>
                          </tr>
                          <%end%>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              <tr>
                <td style="padding-bottom: 30px;" class="mobile-padding">
                  <table class="force-full-width" cellspacing="0" cellpadding="0">
                    <tr>
                      <td class="mobile-block">
                        <table cellspacing="0" cellpadding="0" class="force-full-width">
                          <tr>
                            <td class="mobile-border" style="background-color: #f95497; color: #ffffff; padding: 5px; border-right: 3px solid #ffffff; text-align:left;">
                              Your price expectation: <%= format_currency(@alert.price_expect) %>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
